<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- значения из Spring -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="app"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!--
              %X{trace_id} и %X{span_id} добавит OTel javaagent (через MDC) если включен
              %X{requestId} добавим сами фильтром
            -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - app=%property{APP_NAME} trace=%X{trace_id} span=%X{span_id} req=%X{requestId} %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>